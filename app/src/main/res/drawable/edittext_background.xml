<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="#FFFFFF" />

    <!-- Corner Radius -->
    <corners android:radius="12dp" />

    <!-- Stroke for Border -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Padding Inside EditText -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>
